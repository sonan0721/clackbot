{
  "name": "@sonanlee/clackbot",
  "version": "0.9.1",
  "description": "개인 로컬 Slack 비서 — Claude Code 기반 Slack 에이전트",
  "type": "module",
  "bin": {
    "clackbot": "./dist/bin/clackbot.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc && cp -r src/web/public dist/src/web/public && cp -r templates dist/templates",
    "start": "node dist/bin/clackbot.js start",
    "test": "vitest"
  },
  "keywords": ["slack", "bot", "claude", "agent", "assistant"],
  "author": "sonanlee",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "@slack/bolt": "^4.1.0",
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.3.0",
    "commander": "^13.0.0",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "@inquirer/prompts": "^7.0.0",
    "uuid": "^11.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "files": [
    "dist",
    "templates",
    "examples"
  ]
}
