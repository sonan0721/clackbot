{
  "name": "@sonanlee/clackbot",
  "version": "2.1.3",
  "description": "개인 로컬 Slack 비서 — Claude Code 기반 Slack 에이전트",
  "type": "module",
  "bin": {
    "clackbot": "./dist/bin/clackbot.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc && vite build && node scripts/copy-assets.cjs",
    "dev:frontend": "vite",
    "build:frontend": "vite build",
    "start": "node dist/bin/clackbot.js start",
    "test": "vitest"
  },
  "keywords": [
    "slack",
    "bot",
    "claude",
    "agent",
    "assistant"
  ],
  "author": "sonanlee",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <24.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "@inquirer/prompts": "^7.0.0",
    "@slack/bolt": "^4.1.0",
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.3.0",
    "commander": "^13.0.0",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "semver": "^7.7.4",
    "uuid": "^11.0.0",
    "vue": "^3.5.27",
    "vue-router": "^5.0.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/semver": "^7.7.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.0",
    "vue-tsc": "^3.2.4"
  },
  "files": [
    "dist",
    "templates",
    "examples"
  ]
}
