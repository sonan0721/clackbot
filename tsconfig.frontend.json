{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "paths": { "@/*": ["./src/web/frontend/*"] }
  },
  "include": ["src/web/frontend/**/*", "src/web/frontend/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
